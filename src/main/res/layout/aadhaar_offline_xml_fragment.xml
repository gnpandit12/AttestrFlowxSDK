<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uidai_offline_xml_nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/container_body_padding">

        <TextView
            android:id="@+id/aadhar_offline_verification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_semibold"
            android:paddingStart="@dimen/stage_title_padding_start"
            android:paddingEnd="@dimen/stage_title_padding_end"
            android:layout_marginBottom="@dimen/text_view_vertical_margin"
            android:textColor="@android:color/black"
            android:textSize="@dimen/stage_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardElevation="@dimen/card_elevation"
            app:cardUseCompatPadding="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aadhar_offline_verification_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_view_linear_layout_padding">

                <TextView
                    android:id="@+id/xml_data_error_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/data_error"
                    android:textSize="@dimen/data_error_text_view"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/xml_file_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size" />

                    <TextView
                        android:id="@+id/uidai_xml_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/label_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pan_data_error" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_xml_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_view_linear_layout_padding"
                    android:background="@drawable/dotted_rectangle_boarder"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/select_xml_image_view"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="@dimen/text_view_vertical_margin"/>

                    <TextView
                        android:id="@+id/uidai_xml_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/label_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pan_data_error" />

                </LinearLayout>

                <TextView
                    android:id="@+id/uidai_xml_error_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/data_error"
                    android:textSize="@dimen/data_error_text_view"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_placeholder" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/aadhar_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"/>

                    <TextView
                        android:id="@+id/uidai_number_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/label_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pan_data_error" />

                </LinearLayout>

                <EditText
                    android:id="@+id/uidai_number_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholder_height"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins"
                    android:imeOptions="actionSend"
                    android:importantForAutofill="no"
                    android:inputType="textCapCharacters"
                    android:paddingStart="@dimen/placeholder_padding_start"
                    android:paddingEnd="@dimen/placeholder_padding_end"
                    android:textColorHint="@color/edit_text_hint"
                    android:textSize="@dimen/placeholder_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_label"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/uidai_number_error_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/data_error"
                    android:textSize="@dimen/data_error_text_view"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_placeholder" />

                <LinearLayout
                    android:id="@+id/share_code_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/otp_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size" />

                    <TextView
                        android:id="@+id/share_code_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/label_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pan_data_error" />

                </LinearLayout>

                <EditText
                    android:id="@+id/share_code_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholder_height"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins"
                    android:imeOptions="actionSend"
                    android:importantForAutofill="no"
                    android:inputType="textCapCharacters"
                    android:paddingStart="@dimen/placeholder_padding_start"
                    android:paddingEnd="@dimen/placeholder_padding_end"
                    android:textColorHint="@color/edit_text_hint"
                    android:textSize="@dimen/placeholder_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_label"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/share_code_error_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/data_error"
                    android:textSize="@dimen/data_error_text_view"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_placeholder" />

                <LinearLayout
                    android:id="@+id/uidai_email_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/email_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size" />

                    <TextView
                        android:id="@+id/uidai_email_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/label_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pan_data_error" />

                </LinearLayout>

                <EditText
                    android:id="@+id/uidai_email_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholder_height"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins"
                    android:imeOptions="actionSend"
                    android:importantForAutofill="no"
                    android:inputType="textCapCharacters"
                    android:paddingStart="@dimen/placeholder_padding_start"
                    android:paddingEnd="@dimen/placeholder_padding_end"
                    android:textColorHint="@color/edit_text_hint"
                    android:textSize="@dimen/placeholder_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_label"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/uidai_email_error_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/data_error"
                    android:textSize="@dimen/data_error_text_view"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_placeholder" />

                <LinearLayout
                    android:id="@+id/uidai_mobile_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/smartphone_icon"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="24dp"/>

                    <TextView
                        android:id="@+id/uidai_mobile_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/label_text_view"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pan_data_error" />

                </LinearLayout>

                <EditText
                    android:id="@+id/uidai_mobile_placeholder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/placeholder_height"
                    android:layout_marginBottom="@dimen/text_view_vertical_margin"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/poppins"
                    android:imeOptions="actionSend"
                    android:importantForAutofill="no"
                    android:inputType="textCapCharacters"
                    android:paddingStart="@dimen/placeholder_padding_start"
                    android:paddingEnd="@dimen/placeholder_padding_end"
                    android:textColorHint="@color/edit_text_hint"
                    android:textSize="@dimen/placeholder_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_label"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/uidai_mobile_error_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/data_error"
                    android:textSize="@dimen/data_error_text_view"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/field_pan_placeholder" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/uidai_offline_xml_submit_Relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/submit_button_height"
            android:layout_below="@+id/card_view_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/submit_button_linear_layout_margin_top"
            android:background="@drawable/progress_button_round_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minWidth="48dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/submit_button_padding_start"
            android:paddingEnd="@dimen/submit_button_padding_end"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view_layout">

            <ProgressBar
                android:id="@+id/uidai_offline_xml_submit_progress_bar"
                android:layout_width="@dimen/submit_button_progress_bar_size"
                android:layout_height="@dimen/submit_button_progress_bar_size"
                android:layout_weight="1"
                android:layout_marginEnd="@dimen/submit_button_progress_bar_margin_end"
                android:visibility="gone" />

            <TextView
                android:id="@+id/uidai_offline_xml_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:layout_weight="1"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/submit_button_text_view" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>