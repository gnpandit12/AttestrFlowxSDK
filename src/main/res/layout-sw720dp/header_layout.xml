<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/header_relative_layout"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_size"
    android:background="@color/header"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/logo_image_view"
        android:layout_width="200dp"
        android:layout_height="@dimen/header_logo_image_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/header_logo_margin_start" />

    <ImageView
        android:id="@+id/skip_image_view"
        android:layout_width="@dimen/header_skip_image"
        android:layout_height="@dimen/header_skip_image"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/header_skip_button_margin_end"
        android:src="@drawable/skip" />

</RelativeLayout>