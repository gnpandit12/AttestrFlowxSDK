        <shape android:shape="rectangle">
            <solid android:color="#E7E7E7" />
        </shape>
    </item>

    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#E7E7E7" />
        </shape>
    </item>

    <item
        android:bottom="4dp"
        android:top="4dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <size
                android:width="80dp"
                android:height="60dp" />
        </shape>
    </item>
    <item android:right="20dp">
        <shape>
            <solid android:color="#E7E7E7" />
            <size
                android:width="80dp"
                android:height="60dp" />
            <padding
                android:bottom="15dp"
                android:left="20dp"
                android:right="40dp"
                android:top="15dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_baseline_blur_linear_24" />
