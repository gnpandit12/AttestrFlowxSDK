<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#F4D8D8" />
        </shape>
    </item>

    <item android:top="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F4D8D8" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:top="2dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <size
                android:width="40dp"
                android:height="40dp" />
        </shape>
    </item>
    <item android:right="10dp">
        <shape>
            <solid android:color="#F4D8D8" />
            <size
                android:width="40dp"
                android:height="40dp" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="20dp"
                android:top="10dp" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_otp" />
</layer-list>