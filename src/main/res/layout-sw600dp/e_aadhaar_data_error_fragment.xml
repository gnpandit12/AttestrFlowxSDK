<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingStart="60dp"
        android:paddingEnd="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/field_data_error_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@android:color/holo_red_light"
            android:textSize="@dimen/label_text_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Step 1"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/label_text_view" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/step_one_link_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="@dimen/label_text_view" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Step 2"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/label_text_view" />

            <TextView
                android:id="@+id/step_two_link_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="@dimen/label_text_view" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Step 3"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@android:color/black"
                android:textSize="@dimen/label_text_view" />

            <TextView
                android:id="@+id/step_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/label_text_view" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/e_aadhaar_data_error_submit_Relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/submit_button_height"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="@dimen/submit_button_linear_layout_margin_top"
            android:background="@drawable/progress_button_round_corner"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minWidth="48dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <ProgressBar
                android:id="@+id/e_aadhaar_data_error_submit_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/e_aadhaar_data_error_submit_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/submit_button_text_view" />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>